<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jsen.wgzuul.dao.SecRoleDao">
    <resultMap id="roleMap" type="com.jsen.wgzuul.entity.SecRole">
        <id column="id" property="id"></id>
        <result column="role_name" property="roleName"></result>
        <result column="state" property="state"></result>
    </resultMap>
    <select id="findRoleListByUserId" resultType="java.lang.String">
        SELECT sr.role_name FROM sec_role sr,sec_user su,sec_role_user_rel srur
        <where>
            sr.id = srur.role_id
            and su.id = srur.user_id
            and su.id = #{userId}
        </where>
    </select>
</mapper>